{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "android",
    "ios"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    "src/api/client.ts",
    ".expo/types/**/*.ts"
  ]
}
